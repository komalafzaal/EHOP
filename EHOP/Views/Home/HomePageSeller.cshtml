@{
    ViewData["Title"] = "Home Page Seller";
}


<form method="post"  enctype="multipart/form-data" asp-action="HomePageSeller" asp-controller="Home">
<div class="form-group">
          <label for="exampleProductName">Product Name </label>
          <input type="text"class="form-control" name="ProductName" placeholder="Product Name"
        </div>
<div class="form-group">
          <label for="exampleProductDes">Product Description </label>
          <input type="text"class="form-control" name="ProductDes" placeholder="Product Description"
        </div>
<div class="form-group">
          <label for="exampleProductPrice">Product Price </label>
          <input type="text"class="form-control" name="ProductPrice" placeholder="Product Price"
        </div>
<div class="form-group">
          <label for="exampleProductCategory">Product Category </label>
          <input type="text"class="form-control" name="ProductCategory" placeholder="Product Category"
        </div>
<div class="form-group">
          <label for="exampleProductQuantity">Quantity </label>
          <input type="text"class="form-control" name="ProductQuantity" placeholder="Quantity"
        </div>
    <button type="submit" class="btn btn-primary">Submit</button>
        
<span>Select File: </span>
    <input type="file" name="postedFiles"  multiple/> 
    <button type="submit">Upload File</button>
</form>
<span>@ViewBag.Message</span>

